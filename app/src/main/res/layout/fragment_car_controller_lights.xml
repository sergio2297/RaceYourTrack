<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_dipped_lights"
        android:layout_width="@dimen/button_lights_side"
        android:layout_height="@dimen/button_lights_side"
        android:background="@drawable/dipped_lights_button"/>

    <Button
        android:id="@+id/btn_main_lights"
        android:layout_width="@dimen/button_lights_side"
        android:layout_height="@dimen/button_lights_side"
        android:background="@drawable/main_lights_button"/>

    <Button
        android:id="@+id/btn_left_blinking"
        android:layout_width="@dimen/button_lights_side"
        android:layout_height="@dimen/button_lights_side"
        android:background="@drawable/left_blinking_lights_button"/>

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="@dimen/button_lights_side"
        android:layout_height="@dimen/button_lights_side"
        android:background="@drawable/emergency_lights_button"/>

    <Button
        android:id="@+id/btn_right_blinking"
        android:layout_width="@dimen/button_lights_side"
        android:layout_height="@dimen/button_lights_side"
        android:background="@drawable/right_blinking_lights_button"/>

</LinearLayout>