<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/normal_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <!-- Car Info Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.CarInfoFragment"
            android:id="@+id/car_controller_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <!-- Steering Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.SteeringFragment"
            android:id="@+id/car_controller_steering_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Lights Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.LightsFragment"
            android:id="@+id/car_controller_lights_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <!-- Transmission Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.TransmissionFragment"
            android:id="@+id/car_controller_transmission_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <!-- Challenge Info Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.ChallengeInfoFragment"
            android:id="@+id/car_controller_challenge_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <!-- Pedals Fragment -->
        <fragment class="es.sfernandez.raceyourtrack.carController.PedalsFragment"
            android:id="@+id/car_controller_pedals_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>