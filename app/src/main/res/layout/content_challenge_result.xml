<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_challenge_results"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/large_padding"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_current_player_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/h2_character_size"/>

        <ImageView
            android:layout_width="@dimen/challenge_info_coin_side"
            android:layout_height="@dimen/challenge_info_coin_side"
            android:gravity="center"
            android:layout_marginRight="@dimen/small_padding"
            android:background="@drawable/png_coin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/exterior_container">

        <TextView
            android:id="@+id/txt_challenge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/h2_character_size"
            android:layout_gravity="left"
            android:layout_margin="@dimen/large_padding"
            android:gravity="left"
            android:visibility="gone"/>

        <GridLayout
            android:id="@+id/grid_layout_raceway_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/large_padding"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lyt_challenge_request_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/large_padding"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_bronze_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_bronze_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_silver_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_silver_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_gold_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_gold_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_player_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/h2_character_size"
        android:layout_marginTop="@dimen/large_padding"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/large_padding"
        android:background="@drawable/intermediate_container">

        <LinearLayout
            android:id="@+id/lyt_player_medal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="@dimen/large_padding">

            <TextView
                android:id="@+id/txt_challenge_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_character_size"/>

            <ImageView
                android:id="@+id/img_player_time_medal"
                android:layout_width="@dimen/challenge_info_coin_side"
                android:layout_height="@dimen/challenge_info_coin_side"
                android:gravity="center"
                android:layout_marginRight="@dimen/small_padding"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_special_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="@dimen/large_padding">

            <TextView
                android:id="@+id/txt_special_check_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_character_size"/>

            <ImageView
                android:id="@+id/img_special_check"
                android:layout_width="@dimen/challenge_info_coin_side"
                android:layout_height="@dimen/challenge_info_coin_side"
                android:gravity="center"
                android:layout_marginRight="@dimen/small_padding"
                android:background="@drawable/png_coin_disabled"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_coins_earned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="@dimen/large_padding">

            <TextView
                android:id="@+id/txt_coins_earned_by_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_character_size"/>

            <ImageView
                android:layout_width="@dimen/challenge_info_coin_side"
                android:layout_height="@dimen/challenge_info_coin_side"
                android:gravity="center"
                android:layout_marginRight="@dimen/small_padding"
                android:background="@drawable/png_coin"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_accept_challenge_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ver resultados"
        android:padding="@dimen/normal_padding"
        android:layout_marginTop="@dimen/large_padding"
        android:background="@drawable/raceyourtrack_button"/>

</LinearLayout>