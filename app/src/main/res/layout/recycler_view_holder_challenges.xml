<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_view_holder_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/challenge_info_container_height"
    android:layout_margin="@dimen/small_padding"
    android:background="@drawable/challenge_unlocked_view_holder_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/challenge_info_container_height"
        android:layout_margin="@dimen/large_padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_challenge_raceway_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/h3_character_size"/>

            <TextView
                android:id="@+id/txt_challenge_laps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/h3_character_size"/>

            <TextView
                android:id="@+id/txt_challenge_difficulty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/h3_character_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_bronze_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_bronze_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_silver_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_silver_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/png_gold_coin"/>

                <TextView
                    android:id="@+id/txt_challenge_gold_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_player_time_medal"
                    android:layout_width="@dimen/challenge_info_coin_side"
                    android:layout_height="@dimen/challenge_info_coin_side"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/small_padding"/>

                <TextView
                    android:id="@+id/txt_challenge_player_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3_character_size"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>