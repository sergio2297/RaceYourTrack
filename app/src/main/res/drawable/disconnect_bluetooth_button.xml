<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list >

            <item>
                <bitmap android:gravity="fill"
                    android:src="@drawable/png_disconnect_bluetooth"/>
            </item>

            <item>
                <bitmap android:gravity="fill"
                    android:src="@drawable/png_text_desconectar_bluetooth"/>
            </item>

        </layer-list>

    </item>

    <item android:state_pressed="true">
        <layer-list >
            <item>
                <bitmap android:gravity="fill"
                    android:src="@drawable/png_disconnect_bluetooth"/>
            </item>

            <item>
                <bitmap android:gravity="fill"
                    android:src="@drawable/png_text_desconectar_bluetooth"/>
            </item>

        </layer-list>

    </item>

</selector>