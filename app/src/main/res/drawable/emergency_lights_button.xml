<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:width="2px"/>
                    <corners android:radius="3px"/>
                    <size android:width="@dimen/button_lights_side" android:height="@dimen/button_lights_side"/>
                    <solid android:color="@color/emergency_lights_button_on_color"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center"
                    android:src="@drawable/png_emergency_lights"
                    android:width="@dimen/button_lights_side"
                    android:height="@dimen/button_lights_side"/>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:width="2px"/>
                    <corners android:radius="3px"/>
                    <size android:width="@dimen/button_lights_side" android:height="@dimen/button_lights_side"/>
                    <solid android:color="@color/emergency_lights_button_off_color"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center"
                    android:src="@drawable/png_emergency_lights"
                    android:width="@dimen/button_lights_side"
                    android:height="@dimen/button_lights_side"/>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:width="2px"/>
                    <corners android:radius="3px"/>
                    <size android:width="@dimen/button_lights_side" android:height="@dimen/button_lights_side"/>
                    <solid android:color="@color/emergency_lights_button_on_color"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center"
                    android:src="@drawable/png_emergency_lights"
                    android:width="@dimen/button_lights_side"
                    android:height="@dimen/button_lights_side"/>
            </item>
        </layer-list>
    </item>


</selector>