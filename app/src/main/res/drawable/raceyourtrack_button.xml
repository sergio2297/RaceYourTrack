<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list >

            <item>
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="2dp"/>
                    <stroke
                        android:color="@color/black"
                        android:width="@dimen/button_stroke_dashed_width">
                    </stroke>
                    <solid android:color="@color/blue"/>
                </shape>
            </item>

        </layer-list>

    </item>

        <item android:state_pressed="false">
            <layer-list >

                <item>
                    <shape
                        android:shape="rectangle">
                        <corners
                            android:radius="2dp"/>
                        <stroke
                            android:color="@color/black"
                            android:width="@dimen/button_stroke_dashed_width">
                        </stroke>
                    </shape>
                </item>

            </layer-list>

        </item>

        <item android:state_pressed="true">
            <layer-list >

                <item>
                    <shape
                        android:shape="rectangle">
                        <corners
                            android:radius="2dp"/>
                        <stroke
                            android:color="@color/black"
                            android:width="@dimen/button_stroke_dashed_width">
                        </stroke>
                        <solid android:color="@color/blue"/>
                    </shape>
                </item>

            </layer-list>

        </item>

</selector>